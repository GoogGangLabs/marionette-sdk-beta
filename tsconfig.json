{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ES2015",
    "target": "ES2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": "src",
    "declaration": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "strictPropertyInitialization": false,
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
